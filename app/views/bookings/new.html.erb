<div>
  <div>
    <h1>Schedule a Booking</h1>
  </div>
  <%= form_for(@booking) do |form| %>
    <div class='mb-3'>
      <%= form.label :first_name, "Owner's first name" %>
      <%= form.text_field :first_name %>
    </div>
    <div class='mb-3'>
      <%= form.label :last_name, "Owner's last name" %>
      <%= form.text_field :last_name %>
    </div>
    <div class='mb-3'>
      <%= form.label :animal_name, "Pet's name" %>
      <%= form.text_field :animal_name %>
    </div>
    <div class='mb-3'>
      <%= form.label :animal_type, "Pet type" %>
      <%= form.select :animal_type, [['cat', 'cat'], ['dog', 'dog']]  %>
    </div>
    <div class='mb-3'>
      <%= form.label :hours_requested, 'Hours for booking' %>
      <%= form.select :hours_requested, [['2 hrs', 2], ['3 hrs', 3], ['4 hrs', 4], ['5 hrs', 5], ['6 hrs', 6], ['7 hrs', 7], ['8 hrs', 8]] %>
    </div>
    <div class='mb-3'>
      <%= form.label :date_of_service, 'Date of service' %>
      <%= form.datetime_field :date_of_service %>
    </div>
    <%= form.submit class: 'btn btn-primary' %>
  <% end %>
</div>
